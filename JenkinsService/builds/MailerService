pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script{
                    sh '''
                    echo ${scm.getLocations()[0].getURL()} &&
                    cd MailerService && 
                    bash docker_build.bash "$TOKEN_DOCKER"
                    '''
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
{
    "name": "TFG-Backend",
    "version": "1.0.0",
    "description": "Backend of TFG Project using nestjs",
    "author": "Arturo Alca√±iz",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "start": "ts-node --files src/main",
        "clean": "rm -Rf ./dist/",
        "build:ci": "npm run build",
        "build": "npm run clean && mkdir ./dist && tsc --project tsconfig.build.json",
        "prettier": "prettier --write {,*/**/}*.{ts,js,jsx,json}",
        "test": "export NODE_OPTIONS=\"--max-old-space-size=8192\" && npx jest --runInBand --color --reporters=default --no-cache --coverage=false --silent=false",
        "lint": "npx eslint -c .eslintrc.js --ext .ts './src/**/*.ts' './tests/**/*.ts' --no-error-on-unmatched-pattern"
    },
    "dependencies": {
        "@nestjs/axios": "^0.0.7",
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^1.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mapped-types": "^1.0.0",
        "@nestjs/microservices": "^8.0.0",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/swagger": "^5.0.8",
        "@nestjs/typeorm": "^8.0.1",
        "@nestjs/websockets": "^8.0.0",
        "amqp-connection-manager": "^3.2.2",
        "amqplib": "^0.8.0",
        "apollo-server-express": "^2.19.0",
        "bcrypt": "^5.0.1",
        "bcryptjs": "^2.4.3",
        "bufferutil": "^4.0.3",
        "cache-manager": "^3.4.4",
        "canvas": "^2.8.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "fastify-swagger": "^4.8.2",
        "graphql": "^15.4.0",
        "grpc": "^1.24.10",
        "helmet": "^5.0.2",
        "kafkajs": "^1.15.0",
        "mapped-types": "^0.0.1",
        "mariadb": "^2.5.4",
        "mqtt": "^4.2.8",
        "mysql": "^2.18.1",
        "mysql2": "^2.2.5",
        "nats": "^2.1.0",
        "neo4j-driver": "^4.3.1",
        "passport-jwt": "^4.0.0",
        "redis": "^3.1.2",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.2",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.1.6",
        "synchronized-promise": "^0.3.1",
        "typedi": "^0.10.0",
        "typeorm": "^0.2.34",
        "utf-8-validate": "^5.0.5",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@darraghor/eslint-plugin-nestjs-typed": "^3.9.1",
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.3",
        "@types/jest": "25.2.3",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.33",
        "@types/stripe": "^7.13.25",
        "@types/supertest": "^2.0.8",
        "jest": "27.0.6",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "27.0.3",
        "ts-loader": "^6.2.1",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
